<hr>
<h1>Request Information</h1>
<hr>
<div class="inner-content-wrapper">
  <div id="request-info">
    <%= render 'requests/request_info', request: @request %>
  </div>
</div>

<!-- Renew Modal -->
<div class="modal fade" id="renewModal" tabindex="-1" role="dialog" aria-labelledby="renewModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for @request, :url => 'renew/request/'+@request.id.to_s, :method => :put, :remote => true do |f| %>
        <div class="modal-header">
          <h5 class="modal-title" id="renewModalLabel">Renew Post</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render 'layouts/renew_form', f: f, post: @request %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary my-2 my-sm-0" data-dismiss="modal">Cancel</button>
          <%= f.submit "Renew", :class => "btn btn-outline-danger my-2 my-sm-0" %>
        </div>
      <% end %>
    </div>
  </div>
</div>