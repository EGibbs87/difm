<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th style="width: 10%" scope="col">Posted</th>
      <th style="width: 10%" scope="col">Zip Code</th>
      <th style="width: 15%" scope="col">Timeframe</th>
      <th style="width: 25%" scope="col">Classifications</th>
      <th style="width: 40%" scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    <% requests.each do |r| %>
      <tr>
        <td onclick="window.location='/requests/<%= r.id %>';" class="request-link-cell"><%= r.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%F %H:%M") %><br></td>
        <td onclick="window.location='/requests/<%= r.id %>';" class="request-link-cell"><%= r.location %></td>
        <td onclick="window.location='/requests/<%= r.id %>';" class="request-link-cell"><%= r.timeframe %></td>
        <td onclick="window.location='/requests/<%= r.id %>';" class="request-link-cell"><%= r.classifications.collect(&:name).join(", ") %></td>
        <td>
          <%= r.description %><br>
          <a href="<%= reviews_path(r.user.id) %>"><i><%= r.user.username %>
          <%= render :partial => 'layouts/stars', :locals => { :user => r.user, :role => "request" } %></i></a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
