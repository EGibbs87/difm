<div class="inner-content-wrapper">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <%= f.text_field :username, :autofocus => true, :placeholder => "Username", :class => "form-control reg-form-field" %>

    <%= f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "form-control reg-form-field" %>

    <%= f.text_field :phone, :placeholder => "Contact #", :class => "form-control reg-form-field" %>

    <h4>Show phone number preferences</h4>

    <%= f.check_box :show_phone_service %> Services<br>

    <%= f.check_box :show_phone_request %> Requests<br>

    <h4>Show email address preferences</h4>

    <%= f.check_box :show_email_service %> Services<br>

    <%= f.check_box :show_email_request %> Requests<br>

    <%= f.text_area :profile, :placeholder => "Personal summary (optional)", :class => "form-control reg-form-field" %>

    <%= f.password_field :password, :placeholder => "Password (min 6 characters)", :class => "form-control reg-form-field" %>

    <%= f.password_field :password_confirmation, :placeholder => "Confirm password", :class => "form-control reg-form-field" %>

    <%= f.password_field :current_password, :placeholder => "Current password", :class => "form-control reg-form-field" %>

    <%= f.submit "Update", :class => "btn btn-outline-success" %>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>